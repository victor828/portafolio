---
import BaseHead from "../components/BaseHead.astro";
---

<!doctype html>
<html lang='es' class='h-screen'>
  <head>
    <BaseHead
      title='Home'
      description='Portafolio Victor Eduardo Orozco Martinez, Full Stack web developer'
    />
  </head>
  <body>
    <main>
      <div class='container'>
        <section class='🦖'>
          <img
            width='50%'
            class='rounded-[50%]'
            src='/public/FB_IMG_1709142432381.jpg'
            alt='profile photo'
          />
          <h1>Hi! im Victor</h1>
          <h2>Full Stack Web Developer</h2>
          <h3>Technologies</h3>
          <p>
            HTML | CSS | javaScript | TypesCript | React | Next | Astro | vite
          </p>
        </section>
        <a class='😶‍🌫️' href='/proyects'>
          <section><h2>Proyects</h2></section>
        </a>
        <a class='🦝' href='/about'>
          <section><h2>About</h2></section>
        </a>
      </div>

      <style>
        main {
          height: 100vh;
          background-color: #111111;
        }
        .container {
          color: var(--section-home-text);
          display: grid;
          gap: 0.5rem;
          padding: 1rem;
          width: 90%;
          margin: auto;
          height: 100vh;
        }
        .🦖 {
          background-color: var(--backround-section-home);

          border-radius: 1rem;
          border: var(--border-color);
          display: grid;
          padding: 1rem;
          text-align: center;
          justify-items: center;
        }
        /* .🦖:hover, */
        .🦝:hover,
        .😶‍🌫️:hover {
          border-color: rgb(230 57 70);
        }
        .😶‍🌫️ {
          background-color: var(--backround-section-home);
          border-radius: 1rem;
          border: var(--border-color);
          padding: 0.5rem;
          text-align: center;
        }
        .🦝 {
          background-color: var(--backround-section-home);

          border-radius: 1rem;
          border: var(--border-color);
          padding: 0.5rem;
          text-align: center;
        }

        /* here is the media  */
        @media (min-width: 600px) {
          main {
            background: var(--backround-body);
            padding-top: 5%;
            height: 100vh;
          }
          .container {
            width: 80%;
            height: 70%;
          }
          .🦖 {
            border-radius: 1rem;
            border: 1px solid white;
            grid-column: 1;
            grid-row: 1/3;
          }

          .😶‍🌫️ {
            border-radius: 4px;
            border: 1px solid white;
            grid-column: 2/2;
            padding: 1rem;
            border-radius: 1rem;
            text-align: center;
          }
          .🦝 {
            border: 1px solid white;
            border-radius: 1rem;
            padding: 1rem;
            text-align: center;
          }
        }
        @media (min-width: 1024px) {
          main {
            padding-top: 2%;
          }
        }
      </style>
    </main>
  </body>
</html>
