      <style>
        h1 strong {
          color: tomato;
        }
        main {
          /* height: 100vh; */
          background: var(--backround-body);
          box-sizing: border-box;
          /* padding: 3%; */

          /* background-color: #111111; */
        }
        .container {
          color: var(--section-home-text);
          padding: 1rem;
          display: grid;
          gap: 0.5rem;
          width: 90%;
          margin: auto;
          height: 100vh;
          padding: 3%;
        }
        a:hover {
          position: relative;
          box-shadow: 0 0 10px rgb(230 57 70);
          background-color: #3d3d3d;
          transform: scale(1.05);
          bottom: 10px;
        }
        .ü¶ñ {
          background-color: var(--backround-section-home);

          border-radius: 1rem;
          border: var(--border-color);
          display: grid;
          padding: 1rem;
          text-align: center;
          justify-items: center;
        }
        .ü¶ñ img {
          aspect-ratio: 6/6;
        }
        /* .ü¶ñ:hover, */
        .ü¶ù:hover,
        .üò∂‚Äçüå´Ô∏è:hover {
          border-color: rgb(230 57 70);
        }
        .üò∂‚Äçüå´Ô∏è {
          background-color: var(--backround-section-home);
          border-radius: 1rem;
          border: var(--border-color);
          padding: 0.5rem;
          text-align: center;
        }
        .ü¶ù {
          background-color: var(--backround-section-home);

          border-radius: 1rem;
          border: var(--border-color);
          padding: 0.5rem;
          text-align: center;
        }

        /* here is the media  */
        @media (min-width: 600px) {
          a:hover {
            transform: scale(1.1);
            bottom: 10px;
          }
          main {
            background: var(--backround-body);
            height: 100vh;
          }
          .container {
            padding-top: 5%;
            /* width: 80%; */
            height: 85%;
          }
          .ü¶ñ {
            border-radius: 1rem;
            border: 1px solid white;
            grid-column: 1;
            grid-row: 1/3;
          }

          .üò∂‚Äçüå´Ô∏è {
            border-radius: 4px;
            border: 1px solid white;
            grid-column: 2/2;
            padding: 1rem;
            border-radius: 1rem;
            text-align: center;
          }
          .ü¶ù {
            min-width: 200px;
            border: 1px solid white;
            border-radius: 1rem;
            padding: 1rem;
            text-align: center;
          }
        }
        @media (min-width: 2560px) {
          .container {
            /* padding-top: 2%; */
            background-color: tomato;
            width: 80%;
          }
          h1 {
            font-size: 5.052em;
            height: fit-content;
          }
        }
        /* Animation */
        /* ----------------------------------------------
