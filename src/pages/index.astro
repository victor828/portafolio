---------------------------------------------- */

        .scale-up-horizontal-left {
          animation: scale-up-horizontal-left 0.5s;
        }
        @keyframes scale-up-horizontal-left {
          0% {
            transform: scaleX(0.4);
            transform-origin: left center;
          }
          100% {
            transform: scaleX(1);
            transform-origin: left center;
          }
        }

        .scale-up-horizontal-right {
          animation: scale-up-horizontal-right 0.4s;
        }
        @keyframes scale-up-horizontal-right {
          0% {
            transform: scaleX(0.4);
            transform-origin: right center;
          }
          100% {
            transform: scaleX(1);
            transform-origin: right center;
          }
        }

        .scale-up-vertical-top {
          animation: scale-up-vertical-top 0.4s linear;
        }
        @keyframes scale-up-vertical-top {
          0% {
            transform: scaleY(0.4);
            transform-origin: center top;
          }
          100% {
            transform: scaleY(1);
            transform-origin: center top;
          }
        }
      </style>
