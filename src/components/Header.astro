---
const { title } = Astro.props;
---

<header>
  <button class='text-white p-2 rounded-lg m-1 text-xl'>Menu</button>
  <nav class='hidden'>
    <ol>
      <li><a href='/'>Home</a></li><li><a href='/about'>About</a></li><li>
        <a href='/proyect'>Proyects</a>
      </li>
    </ol>
  </nav>
  <h1>{title}</h1>
</header>

<style>
  header {
    position: relative;
    background-color: black;
    padding-inline: 0.5rem;
    display: flex;
  }
  header button {
    border: var(--border-color);
  }
  header h1 {
    margin: 0;
    margin-left: 3%;
  }
  nav {
    border: var(--border-color);
    padding: 1rem;
    width: 10%;
    position: absolute;
    top: 60px;
  }
</style>
