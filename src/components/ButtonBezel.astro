---
const { text, href = "", size = "w-full", add = "" } = Astro.props;
const Type = href === "" ? "button" : "a";
const Size =
  size === "s"
    ? "w-24"
    : size === "m"
      ? "w-48"
      : size === "l"
        ? "w-72"
        : "w-full";

const background =
  "bg-gradient-to-b from-cyan-500 to-cyan-600 w- text-cyan-950 ";
const hoverBackround =
  "hover:bg-gradient-to-b hover:from-cyan-600 hover:to-cyan-700";
const activeBackround =
  "active:bg-gradient-to-b  active:from-cyan-700 disabled:to-cyan-950 disabled:text-cyan-700";
